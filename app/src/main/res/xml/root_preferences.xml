<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditTextPreference
        android:key="user_id"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="User ID"
        app:enabled="false"
        app:useSimpleSummaryProvider="true" />
    <PreferenceCategory android:title="ModalitÃ ">

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/modes"
            android:entryValues="@array/modes_number"
            android:key="mode_preference"
            android:title="Parametro di visualizzazione"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="view_imported"
            android:title="Visualizza misure importate" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="automatic_fetch"
            android:summary="Ogni volta che entri in un nuovo riquadro"
            android:title="Scansione automatica" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="periodic_fetch"
            android:title="Scansione periodica" />
        <ListPreference
            android:dependency="periodic_fetch"
            android:defaultValue="10"
            android:entries="@array/time"
            android:entryValues="@array/time_value"
            android:key="periodic_fetch_interval"
            android:title="Intervallo di scansione"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:title="Soglie">
        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_preference_bounds"
            android:title="Imposta le soglie manualmente" />
        <EditTextPreference
            android:dependency="switch_preference_bounds"
            android:key="opt_db"
            android:title="Valore ottimale audio (dB)"
            app:defaultValue="60"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:dependency="switch_preference_bounds"
            android:key="bad_db"
            android:title="Valore pessimo audio (dB)"
            app:defaultValue="80"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:dependency="switch_preference_bounds"
            android:key="opt_lte"
            android:title="Valore ottimale LTE"
            app:defaultValue="-80"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:dependency="switch_preference_bounds"
            android:key="bad_lte"
            android:title="Valore pessimo LTE"
            app:defaultValue="-95"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:dependency="switch_preference_bounds"
            android:key="opt_wifi"
            android:title="Valore ottimale Wi-Fi"
            app:defaultValue="-55"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:dependency="switch_preference_bounds"
            android:key="bad_wifi"
            android:title="Valore pessimo Wi-Fi"
            app:defaultValue="-75"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
</PreferenceScreen>